<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg">
    <include
        android:id="@+id/layout_center_title"
        layout="@layout/layout_left_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:layout_marginStart="40dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编译信息："
            android:textColor="@color/white_88"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_version_build_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:textColor="@color/white_88"
            android:textSize="24sp"
            tools:text="V0.12" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙设置："
            android:textColor="@color/white_88"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/btn_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_orange_bg"
            android:layout_marginStart="60dp"
            android:paddingLeft="30dp"
            android:paddingTop="3dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp"
            android:text="初始化蓝牙"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户设置："
            android:textColor="@color/white_88"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/btn_mode_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_orange_bg"
            android:layout_marginStart="60dp"
            android:paddingLeft="30dp"
            android:paddingTop="3dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp"
            android:text="模式切换"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报告设置："
            android:textColor="@color/white_88"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/btn_save_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_orange_bg"
            android:layout_marginStart="60dp"
            android:paddingLeft="30dp"
            android:paddingTop="3dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp"
            android:text="生成报告"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>